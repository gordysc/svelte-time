{
  "compilerOptions": {
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "ignoreDeprecations": "5.0",
    "importsNotUsedAsValues": "error",
    "isolatedModules": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "strict": true,
    "target": "es2017",
    "types": ["svelte"],
    "paths": {
      "svelte-time": ["./src"],
      "svelte-time/*": ["./src/*"]
    }
  },
  "include": ["src", "tests"]
}
